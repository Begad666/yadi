{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"moduleResolution": "Node",
		"downlevelIteration": true,
		"target": "ES5",
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"experimentalDecorators": true,
		"removeComments": true,
		"declaration": true,
		"lib": [
			"es6",
			"dom"
		],
		"types": [
			"reflect-metadata",
			"jest"
		]
	},
	"exclude": [
		"node_modules"
	],
	"typeAcquisition": {
		"enable": true
	},
	"include": [
		"src",
		"tests"
	]
}